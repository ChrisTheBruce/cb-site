{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@worker/*": ["worker/*"]
    },

    "types": ["vite/client"]
  },
  "include": [
    "src",
    "worker",
    "index.ts",
    "vite.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
